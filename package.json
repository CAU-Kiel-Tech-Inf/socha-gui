{
  "name": "software-challenge-gui",
  "version": "1.2.2",
  "description": "GUI der Software-Challenge",
  "repository": "https://github.com/CAU-Kiel-Tech-Inf/socha_graphical_client",
  "main": "main.js",
  "scripts": {
    "test": "mocha --compilers ts:ts-node/register,tsx:ts-node/register 'test/**/*.spec.@(ts|tsx)'",
    "start": "yarn install && yarn compile && electron .",
    "getserver": "git clone git@github.com:CAU-Kiel-Tech-Inf/socha.git; cd socha; git pull; git checkout master; git pull; ant; cd ..; rm -r server; rm -r client; cp -r socha/deploy/server server; cp -r socha/deploy/simple_client/hase_und_igel_player_new/jar client; return 0;",
    "dist": "yarn install && yarn compile && electron-builder --win --linux --mac",
    "compile": "rimraf out && tsc"
  },
  "author": "Software-Challenge Team",
  "license": "ISC",
  "build": {
    "appId": "de.software-challenge.gui",
    "productName": "Software-Challenge GUI",
    "files": [
      "*",
      "*/**",
      "out",
      "!dist"
    ],
    "asar": true,
    "asarUnpack": "server",
    "directories": {
      "output": "dist",
      "buildResources": "build-resources"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.xz"
      ],
      "icon": "build-resources"
    }
  },
  "dependencies": {
    "hazardous": "^0.3.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-photonkit": "^0.4.1",
    "sax": "^1.2.4",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/es6-promise": "0.0.32",
    "@types/mocha": "^2.2.42",
    "@types/react": "^15.0.35",
    "@types/react-dom": "^15.5.1",
    "@types/sax": "^1.0.0",
    "chai": "^4.1.1",
    "chai-immutable": "^1.6.0",
    "electron": "^1.7.5",
    "electron-builder": "^19.27.3",
    "electron-builder-squirrel-windows": "^19.27.3",
    "electron-packager": "^9.0.1",
    "mocha": "^3.5.0",
    "rimraf": "^2.6.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2"
  }
}