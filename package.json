{
  "name": "software-challenge-gui",
  "productName": "Software-Challenge-GUI",
  "version": "19.2.1",
  "description": "GUI f√ºr die Software-Challenge",
  "repository": "https://github.com/CAU-Kiel-Tech-Inf/socha-gui",
  "main": "main.js",
  "scripts": {
    "test": "yarn install && yarn compile",
    "start": "yarn install && yarn compile && (test \"hi\" && (test -d server || yarn compileserver)) || echo I can\\'t test whether the server exists! && electron .",
    "start-dev": "yarn install && yarn compile && electron . --dev",
  
    "update-server": "git submodule update && yarn compile-server",
    "compile-server": "cd socha && ./gradlew :server:deploy -q && cd .. && rimraf server && cp -r socha/server/build/runnable server && cp socha/player/build/libs/defaultplayer.jar .",

    "dist": "yarn install && yarn compile && electron-builder",
    "dist-all": "rimraf dist && yarn dist -mwl",
    "compile": "rimraf out && tsc",
    "clean": "rimraf out; rimraf dist; rimraf server; rimraf socha; rimraf defaultplayer.jar; rimraf *.log.html"
  },
  "author": "Software-Challenge Team",
  "license": "ISC",
  "build": {
    "appId": "de.software-challenge.gui",
    "artifactName": "${productName}-${os}-${version}.${ext}",
    "files": [
      "main.js",
      "src",
      "out",
      "server"
    ],
    "asar": true,
    "asarUnpack": [
      "server"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets/build-resources"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "zip"
      ],
      "electronLanguages": [
        "de",
        "en"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "deep-equal": "^1.0.1",
    "express": "^4.16.3",
    "gl-matrix": "^2.8.1",
    "hazardous": "^0.3.0",
    "phaser": "^3.13.0",
    "portfinder": "^1.0.17",
    "promise-retry": "^1",
    "react": "^15",
    "react-dom": "^15",
    "react-iframe": "^1.2",
    "react-photonkit": "https://github.com/react-photonkit/react-photonkit.git",
    "request": "^2.88.0",
    "sax": "^1.2.4",
    "tree-kill": "^1.2.0",
    "validate-typescript": "^2.0.1",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/es6-promise": "^0.0.32",
    "@types/express": "^4.11.0",
    "@types/promise-retry": "^1",
    "@types/react": "^16.0.36",
    "@types/react-dom": "^16.0.3",
    "@types/request": "^2.0.13",
    "@types/sax": "^1.0.0",
    "electron": "^4.0.0",
    "electron-builder": "^20.38.4",
    "electron-builder-squirrel-windows": "^20.28.3",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  }
}
