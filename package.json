{
  "name": "software-challenge-gui",
  "productName": "Software-Challenge-GUI",
  "version": "20.0.0-alpha",
  "description": "GUI f√ºr die Software-Challenge",
  "repository": "https://github.com/CAU-Kiel-Tech-Inf/socha-gui",
  "main": "main.js",
  "scripts": {
    "test": "yarn install && yarn compile",
    "start": "yarn install && yarn compile && (test -d server || yarn update-server) && electron .",
    "start-dev": "yarn install && yarn compile && electron . --dev",

    "update-server": "git submodule update --remote && yarn compile-server",
    "compile-server": "cd socha && ./gradlew :server:deploy -q && cd .. && rimraf server && cp -r socha/server/build/runnable server && cp socha/player/build/libs/defaultplayer.jar .",

    "dist": "yarn install && yarn compile && electron-builder",
    "dist-all": "rimraf dist && yarn dist -mwl",
    "compile": "rimraf out && tsc",
    "clean": "rimraf out; rimraf dist; rimraf server; rimraf socha; rimraf defaultplayer.jar; rimraf *.log.html"
  },
  "author": "Software-Challenge Team",
  "license": "ISC",
  "build": {
    "appId": "de.software-challenge.gui",
    "artifactName": "${productName}-${os}-${version}.${ext}",
    "files": [
      "main.js",
      "src",
      "out",
      "server"
    ],
    "asar": true,
    "asarUnpack": [
      "server"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets/build-resources"
    },
    "win": {
      "icon": "assets/build-resources/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "assets/build-resources/icon.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        "zip"
      ],
      "electronLanguages": [
        "de",
        "en"
      ]
    },
    "linux": {
      "icon": "assets/build-resources/icon.png",
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "deep-equal": "^1.0.1",
    "express": "^4.16.3",
    "gl-matrix": "^3.0.0",
    "hazardous": "^0.3.0",
    "phaser": "3.14.0",
    "portfinder": "^1.0.20",
    "promise-retry": "^1",
    "react": "^16",
    "react-dom": "^16",
    "react-photonkit": "https://github.com/octoth0rpe/react-photonkit.git",
    "request": "^2.88.0",
    "sax": "^1.2.4",
    "tree-kill": "^1.2.1",
    "validate-typescript": "^4.0.1",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.16.1",
    "@types/promise-retry": "^1.1.3",
    "@types/react": "^16",
    "@types/react-dom": "^16",
    "@types/request": "^2.48.1",
    "@types/sax": "^1.0.0",
    "electron": "^5.0.0",
    "electron-builder": "^20.39.0",
    "rimraf": "^2.7.1",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
