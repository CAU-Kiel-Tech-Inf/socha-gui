
{
  "compilerOptions": {
    "jsxFactory": "React.createElement",
    "jsx": "react",
    "preserveConstEnums": true,
    "sourceMap": true,
    "checkJs": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2016",
    "watch": false,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": [
    "src/api/**/*",
    "src/gui/**/*",
    "src/viewer/**/*"
  ],
  "exclude": [
    "src/api/asynchronous/AsyncApi.ts",
    "src/api/asynchronous/AsyncGameManager.ts",
    "src/api/asynchronous/ExecutableClient.ts",
    "src/api/asynchronous/GameManagerWorker.ts",
    "src/api/asynchronous/HumanClient.ts",
    "src/api/asynchronous/LiveGame.ts",
    "src/api/asynchronous/Server.ts"
  ],
  "extends": "./tsconfig-base.json"
}
