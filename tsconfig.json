{
  "compilerOptions": {
    "jsxFactory": "React.createElement",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "build/",
    "listFiles": true,
    "checkJs": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015",
      "dom",
      "es6"
    ],
    "watch": true
  },
  "include": [
    "gui/**/*",
    "api/**/*",
    "viewer/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}